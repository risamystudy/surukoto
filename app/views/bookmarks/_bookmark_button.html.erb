
  <% if current_user.bookmark_task?(task) %>
    <%= form_with(model: current_user.bookmarks.find_by(task_id: task.id), method: :delete) do |f| %>
      <%= hidden_field_tag :task_id, task.id %>
      <%= f.submit 'Unbook', class: 'btn btn-danger w-100' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.bookmarks.build) do |f| %>
      <%= hidden_field_tag :task_id, task.id %>
      <%= f.submit 'book', class: 'btn btn-primary w-100' %>
    <% end %>
  <% end %>
