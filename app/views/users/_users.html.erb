<% if users.any? %>
  <div class="row justify-content-center">
  <ul class="border border-secondary col-6 p-2 p-sm-5 my-4 rounded">
    <% users.each do |user| %>
      <li class="mb-3 d-flex">
        <img class="rounded-circle" src="<%= gravatar_url(user, { size: 64 }) %>" alt="">
        <div>
          <div class="mx-2">
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to '　　[ ユーザー詳細 ]', user_path(user), class: "text-decoration-none" %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <div class="d-flex align-items-center justify-content-center">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% end %>