<div class="row justify-content-center border border-secondary rounded">

    <div class="text-center">
      <h1>login</h1>
    </div>
    
    <div class="row justify-content-center">
      <div class="col-4">
    
        <%= form_with(url: login_path, scope: :session) do |f| %>
    
          <div class="mb-3">
            <%= f.label :email, 'Email' %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
    
          <div class="mb-3">
            <%= f.label :password, 'Password' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>

          <div class="row justify-content-center">
            <%= f.submit 'login', class: 'btn btn-primary w-50' %>
          </div>

        <% end %>
        
          <p class="text-center mt-2"><%= link_to 'signup?', signup_path %></p>
        
      </div>
    </div>
  </div>
